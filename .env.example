# ==========================================
# Mami AI v4 - Core v2 Environment Config
# ==========================================

# --- Application ---
# development | production
APP_ENV=development
DEBUG=True

# --- AI Providers (Groq) ---
# Format: JSON Array ["key1", "key2"] OR CSV key1,key2
GROQ_API_KEYS=["gsk_example_key_1", "gsk_example_key_2"]

# --- Redis (Cache & State) ---
# 1. Local Development:
REDIS_URL=redis://localhost:6379/0
REDIS_SSL_CERT_REQS=none

# 2. Upstash / Render / Cloud (TLS Enabled):
# REDIS_URL=rediss://default:password@fly-mami-redis.upstash.io:6379
# REDIS_SSL_CERT_REQS=required

# --- Database (Neo4j) ---
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
